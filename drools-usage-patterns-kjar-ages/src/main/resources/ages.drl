package com.rhc.drools.example
import com.rhc.drools.example.model.Person;
import com.rhc.drools.example.model.Name;

rule "Sal's age"
when
	$sal : Person(age != 55, name.getFirstName() == "Sal")
then
	$sal.setAge(55);
end

rule "Sam's age"
when
    $sam : Person(name.firstName == "Sam", name.lastName == "Rang")
then
    $sam.setAge(26);
end
